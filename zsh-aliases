# save dotfiles commands
# alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME' 

alias ls='exa --icons'
alias v="nvim"
alias vim="nvim"
alias fb="flutter build apk --release"
alias fr="flutter run"

# easier to read disk
alias free='free -m' # show sizes in MB

# ssh session
# stops asking ssh paraphrase
alias sesh='eval $(ssh-agent) && ssh-add'

alias g='git'

alias ll='exa -la --git --icons'

# grep color
alias grep='grep --color=auto'

# lf
alias lf='lfub'

alias cdpm='cd ~/work/property_manager'
alias mysqlpm='mysql -uroot -hmysql property_manager_development'
alias be='bundle exec'
alias ber='bundle exec rails'
alias bert='bundle exec rails test'
alias rpm='cdpm && sudo systemctl start docker && docker-compose up -d redis mysql elasticsearch && rails s'
